<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.test.activity.RegardingPlbActivity"
    android:background="#f1f0f0"
    >

    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#e8e8e8"
        >

        <ImageView
            android:id="@+id/img1"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:background="@mipmap/appicon" />
        <TextView
            android:id="@+id/t1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="吃喝玩乐啥都有"
            android:textSize="20dp"
            android:textColor="#000"
            android:layout_below="@id/img1"
            android:gravity="center"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/version"
            android:layout_below="@id/t1"
            android:layout_marginTop="10dp"
            android:text="批零帮v1.1.0"
            android:textSize="20dp"
            android:gravity="center"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_below="@id/r1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e8e8e8"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/baozhang"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="批零帮规划及服务保证"
        android:textSize="20dp"
        android:textColor="#000"
        android:gravity="center|left"
        android:layout_below="@id/r1"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="10dp"
        />
    <LinearLayout
        android:layout_below="@id/baozhang"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e8e8e8"
        android:layout_marginTop="10dp"
        />
    <LinearLayout
        android:id="@+id/l4"
        android:layout_below="@id/baozhang"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e8e8e8"
        android:layout_marginTop="24dp"
        android:orientation="horizontal" />
    <TextView
        android:id="@+id/t2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="营业执照"
        android:textSize="20dp"
        android:textColor="#000"
        android:gravity="center|left"
        android:layout_below="@id/l4"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        />

    <LinearLayout
        android:id="@+id/l6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/t2"
        android:background="#e8e8e8"
        android:layout_marginTop="10dp"
        android:orientation="vertical" />
    <LinearLayout
        android:id="@+id/l5"
        android:layout_below="@id/l6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e8e8e8"
        android:layout_marginTop="24dp"
        android:orientation="horizontal" />
    <TextView
        android:id="@+id/t3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="检车更新"
        android:textSize="20dp"
        android:textColor="#000"
        android:gravity="center|left"
        android:layout_below="@id/l5"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        />
    <LinearLayout
        android:id="@+id/l7"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/t3"
        android:background="#e8e8e8"
        android:layout_marginTop="10dp"
        android:orientation="vertical" />
</RelativeLayout>
