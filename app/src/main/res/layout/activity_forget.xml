<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.test.activity.ForgetActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/text_blue"
        android:gravity="center_vertical"
        android:padding="5dp">

        <ImageView
            android:id="@+id/back_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重置密码"
            android:textSize="18sp"
            android:textColor="#ffffff"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/user_message"
        android:layout_below="@+id/appicon"
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <com.test.courier.ClearEditText
            android:id="@+id/user_phone"
            android:layout_marginTop="10dp"
            android:maxLines="1"
            android:maxLength="11"
            android:layout_gravity="center_horizontal"
            android:layout_width="268dp"
            android:drawableRight="@mipmap/cuo"
            android:drawableLeft="@drawable/if_the_selected_phone_replace"
            android:textColor="@drawable/if_the_selected_font_color_replace"
            android:hint="手机号"
            android:background="@drawable/if_the_selected_input_box"
            android:layout_height="40dp" />
        <com.test.courier.ClearEditText
            android:id="@+id/user_pwd"
            android:maxLines="1"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="268dp"
            android:inputType="textPassword"
            android:drawableRight="@mipmap/cuo"
            android:drawableLeft="@drawable/if_the_selected_pwd_replace"
            android:textColor="@drawable/if_the_selected_font_color_replace"
            android:hint="新密码"
            android:background="@drawable/if_the_selected_input_box"
            android:layout_height="40dp" />
        <LinearLayout
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:layout_marginRight="10dp"
                android:background="@drawable/if_the_selected_input_box"
                android:layout_height="50dp"
                android:layout_width="125dp"
                android:id="@+id/up_code"
                android:textColor="#000"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:hint="验证码"
                android:textCursorDrawable="@null"/>
            <Button
                android:background="@drawable/if_the_selected_input_box"
                android:layout_height="50dp"
                android:layout_width="125dp"
                android:id="@+id/up_codebt"
                android:gravity="center"
                android:layout_marginTop="18dp"
                android:hint="发送验证码"
                android:textCursorDrawable="@null"/>
        </LinearLayout>
        <Button
            android:id="@+id/submit"
            android:layout_marginTop="20dp"
            android:background="@mipmap/register_btn"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认提交"
            />
    </LinearLayout>
</LinearLayout>
