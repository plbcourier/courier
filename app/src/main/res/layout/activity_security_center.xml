<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.test.activity.SecurityCenterActivity"
    android:background="#e8e8e8"
    >
    <LinearLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/text_blue"
        android:gravity="center_vertical"
        android:padding="5dp">

        <ImageView
            android:id="@+id/back_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号与安全"
            android:textSize="18sp"
            android:textColor="#ffffff"/>
    </LinearLayout>
    <TextView
        android:layout_below="@+id/head"
        android:id="@+id/zhanghao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="账号"
        android:textSize="20dp"
        android:layout_margin="10dp"
        />
    <RelativeLayout
        android:layout_below="@id/zhanghao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:id="@+id/relativeLayout">
        <TextView
            android:id="@+id/login_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="登录密码"
            android:textSize="22dp"
            android:textColor="#000"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="修改      "
            android:textSize="20dp"
            android:gravity="right|center"
            />
        <LinearLayout
            android:id="@+id/l1"
            android:layout_below="@id/login_pwd"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e8e8e8"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical" />
        <TextView
            android:layout_below="@id/l1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="安全等级:"
            />
        <TextView
            android:id="@+id/bind"
            android:layout_below="@id/l1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="绑定/解绑      "
            android:gravity="right|center"
            />
        <TextView
            android:layout_below="@id/l1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="中"
            android:textColor="#ff0000"
            android:layout_marginLeft="100dp"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/anquan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/zhanghao"
        android:layout_below="@+id/relativeLayout"
        android:text="安全"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/anquan2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/zhanghao"
        android:layout_below="@+id/relativeLayout"
        android:text="风险等级:        "
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center|right"
        />
    <TextView
        android:id="@+id/anquan3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/zhanghao"
        android:layout_below="@+id/relativeLayout"
        android:text="中   "
        android:textSize="20dp"
        android:textColor="#ff0000"
        android:layout_marginTop="10dp"
        android:gravity="center|right"
        />
    <RelativeLayout
        android:layout_below="@id/anquan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:id="@+id/r2"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:id="@+id/recently_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="最近登录记录"
            android:textSize="20dp"
            android:textColor="#000"
            />
        <LinearLayout
            android:id="@+id/l2"
            android:layout_below="@id/recently_login"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e8e8e8"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical" />
        <TextView
            android:id="@+id/zhanghaoxiangguan"
            android:layout_below="@id/l2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="账号相关答疑:"
            android:textColor="#000"
            />
        <LinearLayout
            android:id="@+id/l3"
            android:layout_below="@id/zhanghaoxiangguan"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e8e8e8"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical" />
        <TextView
            android:layout_below="@id/zhanghaoxiangguan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="注销账号"
            android:textColor="#000"
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="注销后无法恢复，请慎重操作      "
            android:textSize="15dp"
            android:gravity="right|center"
            android:layout_below="@id/zhanghaoxiangguan"
            />
    </RelativeLayout>
</RelativeLayout>
